<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE plist PUBLIC "-//Apple//DTD PLIST 1.0//EN" "http://www.apple.com/DTDs/PropertyList-1.0.dtd">
<plist version="1.0">
<dict>
    <!-- Bonjour Services -->
    <key>NSBonjourServices</key>
    <array>
        <string>_argusai._tcp</string>
    </array>

    <!-- Local Network Usage Description -->
    <key>NSLocalNetworkUsageDescription</key>
    <string>ArgusAI needs local network access to discover and connect to your ArgusAI server for faster performance.</string>

    <!-- Background Modes for Push Notifications -->
    <key>UIBackgroundModes</key>
    <array>
        <string>remote-notification</string>
    </array>

    <!-- App Transport Security -->
    <key>NSAppTransportSecurity</key>
    <dict>
        <!-- Allow local HTTP connections for development -->
        <key>NSAllowsLocalNetworking</key>
        <true/>
        <!-- In production, use NSExceptionDomains for specific hosts if needed -->
    </dict>

    <!-- Required device capabilities -->
    <key>UIRequiredDeviceCapabilities</key>
    <array>
        <string>arm64</string>
    </array>

    <!-- Supported interface orientations (iPhone) -->
    <key>UISupportedInterfaceOrientations</key>
    <array>
        <string>UIInterfaceOrientationPortrait</string>
        <string>UIInterfaceOrientationLandscapeLeft</string>
        <string>UIInterfaceOrientationLandscapeRight</string>
    </array>
</dict>
</plist>
